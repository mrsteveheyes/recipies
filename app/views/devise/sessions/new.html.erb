<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex items-center justify-center h-screen flex-col" }) do |f| %>
  <h1 class="text-3xl font-bold leading-8 tracking-tight text-center">Log in</h1>
  <div class="field">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
  </div>
  <div class="field">
    <%= f.label :password , class: "label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "label inline-block" %>
    </div>
  <% end %>
  <div class="actions w-full">
    <%= f.submit "Log in", class: 'btn btn-primary w-full' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
