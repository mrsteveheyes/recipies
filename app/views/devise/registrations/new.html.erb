<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex items-center justify-center h-screen flex-col" }) do |f| %>
  <h1 class="text-3xl font-bold leading-8 tracking-tight text-center">Sign up</h1>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email, class: 'label'  %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
  </div>
  <div class="field">
    <%= f.label :password, class: 'label' %>
    <% if @minimum_password_length %>
      <em class="text-sm leading-6 inline-block">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, class: 'label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
  </div>
  <div class="actions w-full">
    <%= f.submit "Sign up", class: 'btn btn-primary w-full' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
